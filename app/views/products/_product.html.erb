<%if card_is_link%>
  <div class="column is-10-mobile is-one-third-tablet is-one-quarter-desktop">
<%else%>
  <div class="column is-8">
<%end%>

  <div class="card prodct" style="padding:2px; height:100%">
    <%if card_is_link%>
      <%= link_to "", product, class: "card-link"%>
     <%end%>
      <div class="card-image">
        <figure class="image is-4by3 is-2*18">
          <%= image_tag url_for(product.image.variant(resize_to_limit: [200, 200]))%>
        </figure>
      </div>
      <div class="card-content">
      <ul style="list-style-type:none; text-align:left">
        <li class="card-title">Name: <%=product.name%></li>
        <li>Price: <%=product.price%></li>
        <li>Category: <%=product.category.name%></li>
      </ul>
      </div>
  </div>
</div>