<!DOCTYPE html>
<html>
  <head>
    <title>EcommerceProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color:#eaf0e9; height:130vh">


<nav class="navbar" role="navigation" aria-label="main navigation" style="background-color:#a090fa;">
  <div class="container">
    <div class="navbar-brand">
      <a class="navbar-item" href="">
        <%= link_to image_tag('/assets/kisspng-sneakers-shoe.png',size: "150x48"),root_path%>

        <!--<%= image_tag ("/assets/kisspng-sneakers-shoe.png"), size: "150x48"%>-->
        <!--<img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">-->
      </a>

      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start" style="padding-left:100px">

          <%= link_to "About", permalink_path(permalink: 'about_us'), class: "navbar-item" %>



          <%= link_to  "Contact", permalink_path(permalink: 'contact_us'), class: "navbar-item"%>


        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link">
            Category
          </a>

          <div class="navbar-dropdown">
            <a class="navbar-item">
              Sport shoes
            </a>
            <a class="navbar-item">
              Dancing shoes
            </a>
            <a class="navbar-item">
              slipper
            </a>
            <!--<hr class="navbar-divider">-->
            <a class="navbar-item">
              leather shoes
            </a>
          </div>
        </div>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <a class="button is-primary">
              <strong>Sign up</strong>
            </a>
            <a class="button is-light">
              Log in
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<div class="container">
    <%= yield %>

</div>
  </body>
</html>
